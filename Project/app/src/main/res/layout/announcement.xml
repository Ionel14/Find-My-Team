<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp">

    <LinearLayout
        android:id="@+id/cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview_rounded"
        android:orientation="vertical"
        android:padding="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    >
        <com.google.android.material.imageview.ShapeableImageView
          app:shapeAppearance="@style/circleImageView"
            android:id="@+id/user_image"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/gigachad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to favorite"
        android:textSize="16dp"
        android:fontFamily="@font/soccerleague"
        android:layout_marginStart="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_to_favorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/add_favorite_announce"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        />


</RelativeLayout>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/soccerleague"
            android:gravity="center"
            android:text="Zaharia Constantin-Catalin"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/soccerleague"
            android:gravity="center"
            android:text="Football"
            android:textColor="@color/black"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:text="Your requirements"
            android:textSize="16dp"
            android:fontFamily="@font/soccerleague"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/announcement_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:background="@drawable/more_info_actions"
            android:layout_marginStart="20dp"
            android:textColor="@drawable/text_create_button_behaviours"
            android:layout_marginEnd="20dp"/>




    </LinearLayout>
</androidx.cardview.widget.CardView>
